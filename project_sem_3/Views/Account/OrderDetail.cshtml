

@using project_sem_3.Models;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var orderDetails = ViewBag.OrderDetail as List<OrderDetail>;
    var order = ViewBag.Order as Order;
    int dem = 1;
}

<div class="hero-wrap hero-bread" style="background-image: url('/Content/Images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("Index", "Home")">Home</a></span> <span>Chi tiết đơn hàng</span></p>
                <h1 class="mb-0 bread">Chi tiết đơn hàng ngày <span style="color: blue">@order.CreatedAt.ToString("hh:mm dd-MM-yyyy")</span></h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div id="table-list-cart-ftco" class="col-md-12 ftco-animate">
                <div class="cart-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>#</th>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                            </tr>
                        </thead>
                        <tbody id="js-cart-items">
                            @foreach (var item in orderDetails)
                            {
                                <tr class="text-center">
                                    <td>@dem</td>
                                    <td>@item.ProductDetail.Product.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>






